<UserControl x:Class="TextRedactor.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextRedactor"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    
    <DockPanel>
        

        <Menu Background="#0f0f2d" Foreground="Wheat">
            <MenuItem Header="File">
                <MenuItem Header="Open" Background="#0f0f2d" Click="MenuItem_Click_open"/>
                <MenuItem Header="Save" Background="#0f0f2d" Click="MenuItem_Click_save"/>
                <MenuItem Header="Save As" Background="#0f0f2d" Click="MenuItem_Click_saveAs"/>
                <MenuItem Header="Print" Background="#0f0f2d" Click="MenuItem_Print"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Font" Background="#0f0f2d" Click="MenuItem_Click_Font"/>
                <MenuItem Header="Html" Background="#0f0f2d" Click="MenuItem_Html"/>
            </MenuItem>
            <MenuItem Header="View"></MenuItem>
            <MenuItem Header="Help"></MenuItem>
        </Menu>

        
    </DockPanel>
    
</UserControl>
