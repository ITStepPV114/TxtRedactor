<Window x:Class="TextRedactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextRedactor"
        mc:Ignorable="d"
        x:Name="mainWindow"
        Title="TypoTamer" Height="600" Width="920 ">
    <Border>
        <StackPanel>
            <Grid x:Name="mainPanel"></Grid>

            <RichTextBox Name="rtbEditor" Background="#272537" Foreground="White" Height="{Binding ElementName=mainWindow,Path=ActualHeight}" SelectionChanged="rtbEditor_SelectionChanged">

            </RichTextBox>
        </StackPanel>
    </Border>
</Window>